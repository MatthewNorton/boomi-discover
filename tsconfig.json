{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "esModuleInterop": true,
        "allowJs": true, // allow a partial TypeScript and JavaScript codebase
        "lib": ["dom","es7", "esnext"],
        "skipLibCheck": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types/",
        ],
        "types": ["node", "jest"],
    },
    "include": [
        "./src/**/*"
    ]
}
